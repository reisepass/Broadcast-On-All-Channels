{
  "name": "broadcast-on-all-channels",
  "version": "0.1.0",
  "description": "Multi-protocol message passing system with automatic fallback",
  "type": "module",
  "scripts": {
    "chat": "bun run src/cli.ts",
    "demo": "bun run examples/full-broadcast-demo.ts",
    "test:xmtp": "bun run examples/xmtp-test.ts",
    "test:nostr": "bun run examples/nostr-test.ts",
    "test:iroh": "bun run examples/iroh-test.ts",
    "test:waku": "bun run examples/waku-test.ts",
    "test:mqtt": "bun run examples/mqtt-test.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:channels:xmtp": "bun test tests/xmtp.test.ts",
    "test:channels:nostr": "bun test tests/nostr.test.ts",
    "test:channels:waku": "bun test tests/waku.test.ts",
    "test:channels:mqtt": "bun test tests/mqtt.test.ts",
    "test:channels:iroh": "bun test tests/iroh.test.ts",
    "test:integration": "bun test tests/integration.test.ts",
    "node:chat": "tsx src/cli.ts",
    "node:demo": "tsx examples/full-broadcast-demo.ts",
    "node:test:xmtp": "tsx examples/xmtp-test.ts",
    "node:test:nostr": "tsx examples/nostr-test.ts",
    "node:test:iroh": "tsx examples/iroh-test.ts",
    "node:test:waku": "tsx examples/waku-test.ts",
    "node:test:mqtt": "tsx examples/mqtt-test.ts",
    "deno:chat": "deno run --allow-all --unstable src/cli.ts",
    "deno:demo": "deno run --allow-all --unstable examples/full-broadcast-demo.ts",
    "deno:test:xmtp": "deno run --allow-all --unstable examples/xmtp-test.ts",
    "deno:test:nostr": "deno run --allow-all --unstable examples/nostr-test.ts",
    "deno:test:iroh": "deno run --allow-all --unstable examples/iroh-test.ts",
    "deno:test:waku": "deno run --allow-all --unstable examples/waku-test.ts",
    "deno:test:mqtt": "deno run --allow-all --unstable examples/mqtt-test.ts"
  },
  "dependencies": {
    "@libsql/client": "^0.15.15",
    "@noble/curves": "^1.3.0",
    "@noble/hashes": "^1.3.3",
    "@nostr-dev-kit/ndk": "^2.8.2",
    "@number0/iroh": "^0.35.0",
    "@waku/sdk": "0.0.36",
    "@xmtp/node-sdk": "^0.0.47",
    "chalk": "^5.3.0",
    "ethers": "^6.10.0",
    "mqtt": "^5.3.0",
    "nostr-tools": "^2.7.0",
    "readline": "^1.3.0",
    "viem": "^2.0.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "tsx": "^4.20.6",
    "typescript": "^5.3.3"
  }
}
